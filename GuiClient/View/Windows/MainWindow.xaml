<Window x:Class="GuiClient.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RemoteControl Connector" 
        Height="100" 
        Width="300" 
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid>
        <StackPanel Margin="5">
            <TextBox Name="txtIp" Text="127.0.0.1" Width="120"/>
            <Button Name="btnConnect" Content="Connect" Width="120"/>
            <Button Name="btnChat" Content="Open Chat" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
