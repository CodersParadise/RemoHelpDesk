<Window x:Class="GuiServer.ViewImplementation.Windows.ScreenshotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScreenshotWindow" 
        Height="400" 
        Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Name="imageView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="buttonReload" Content="Reload" Width="100" VerticalAlignment="Center" Margin="3"/>
            <CheckBox Name="checkboxMouseInput" Content="Mouse Input" VerticalAlignment="Center" Margin="3" Padding="0"/>
            <Label Content="Quality:" VerticalAlignment="Center" Margin="3,3,1,3"/>
            <Slider Name="sliderQuality" Width="100" VerticalAlignment="Center" Margin="1,3,3,3"/>
            <CheckBox Name="checkboxAutoReload" Content="Auto Reload" VerticalAlignment="Center" Margin="3" Padding="0"/>
            <Label Content="Intervall:" VerticalAlignment="Center" Margin="3,3,1,3"/>
            <Slider Name="sliderIntervall" Width="100" Height="20" VerticalAlignment="Center" Margin="1,3,3,3"/>
            <CheckBox Name="checkboxAutoSave" Content="Auto Save" VerticalAlignment="Center" Margin="3" Padding="0"/>
        </StackPanel>
    </Grid>
</Window>
